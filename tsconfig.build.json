{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node"],
    "noEmit": false,
    "paths": {
      "../package.json": ["../package.json"]
    }
  },
  "exclude": ["node_modules", "lib", "test"],
  "references": [{ "path": "../package.json" }]
}
